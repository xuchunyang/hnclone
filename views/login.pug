doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title login - hnclone
    style
      include style.css
  body
    if errMessage
      p #{errMessage}
    form(action="login" method="post")
      h3 Login
      .grid
        label(for="login-username") Username:
        input#login-username(name="username" type="text" required autocomplete="username")
        label(for="login-password") Password:
        input#login-password(name="password" type="password" required autocomplete="current-password")
        input(type="submit" value="login")
    form(action="signup" method="post")
      h3 Create Account
      .grid
        label(for="username") Username:
        input#username(name="username" type="text" required autocomplete="username")
        label(for="password") Password:
        input#password(name="password" type="password" required autocomplete="new-password")
        input(type="submit" value="create account")
